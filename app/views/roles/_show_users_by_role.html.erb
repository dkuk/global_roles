<%= stylesheet_link_tag 'global_roles', :plugin => 'global_roles' %>

<%= javascript_include_tag :global_roles, :plugin => :global_roles %>

<%= content_tag(:div, js_err, :id => "errorExplanation") if local_assigns[:js_err] && !js_err.nil? %>

<div>
  <div class="splitcontentleft" style="width:65%;">
    <% if @role_principals.any? %>
      <table class="list relations">
        <thead>
          <tr>
            <th><%= l(:label_user) %> / <%= l(:label_group) %></th>
            <th><%= l(:label_project) %></th>
            <th style="width:15%"></th>
          </tr>
        </thead>
        <tbody>
        <% @role_principals.sort_by{|el| [el.type, el.lastname.to_s]}.each do |principal| %>
          <% render_principal = true %>
          <% principal.memberships.each do |member| %>
            <tr id="principal-<%= principal.id %>" class="<%= cycle 'odd', 'even' %>">
            <% if render_principal %>
              <% group_class = principal.instance_of?(Group) ? "group" : "" %>
              <td class="principal-name <%= group_class %>">
                <% if principal.instance_of?(User) %>
                  <%= link_to(principal.name, edit_user_path(principal)) %></td>
                <% elsif principal.instance_of?(Group) %>
                  <%= link_to(principal.name, edit_group_path(principal)) %></td>
                <% end %>
            <% else %>
              <td></td>
            <% end %>
              <td class="project-name">
                <%= link_to_project_settings(member.project, {}, :id => "member-#{member.id}-project-link" , :title => member.project.short_description) %>
                <%= form_tag({:controller => 'roles', :action => 'edit_user_projects_by_role', :id => @role.id, :principal_id => principal.id}, {:method => :put, :remote => true, :id => "member-#{member.id}-projects-form", :style => 'display: none;'}) do %>
                  <p>
                    <% @projects.each do |project| %>
                    <label><%= check_box_tag 'membership[project_ids][]', project.id, principal.projects.include?(project) %>
                      <%=h project %>
                    </label><br />
                    <% end %>
                  </p>
                  <%= hidden_field_tag 'membership[project_ids][]', '' %>
                  <p><%= submit_tag l(:button_change), :class => "small" %>
                  <%= link_to_function l(:button_cancel), "$('#member-#{member.id}-project-link').show(); $('#member-#{member.id}-projects-form').hide(); return false;" %>
                  </p>
                <% end %>
              </td>
              <td class="buttons">
                <%= link_to_function "<span>#{l(:button_edit)}</span>".html_safe, "$('#member-#{member.id}-project-link').hide(); $('#member-#{member.id}-projects-form').show(); return false;", :class => 'icon icon-edit' %>
                <%= link_to("<span>#{l(:button_delete)}</span>".html_safe, "remove_user_from_role/#{member.id}", :method => :delete, :remote => true, :class => 'in_link icon icon-del' ) %>
              </td>
            </tr>
          <% render_principal = false %>
          <% end %>
        <% end %>
        </tbody>
      </table>
    <% else %>
      <p id="no_relation_groups_records" class="nodata"><%= l(:label_no_data) %></p>
    <% end %>
  </div>
  <div class="splitcontentright" style="width:30%;">
    <%= form_tag({:action => "add_user_to_role"},{:id =>'select_users', :remote => true}) do %>
      <fieldset>
        <legend><strong> <%= l(:label_add_user_to_role) %> </strong></legend>
        </br>
        <strong><%= l(:label_project) %></strong>
        <p><%= projects_select_tag('project_id', @projects) %></p>

        <strong> <%= l(:label_user) %> / <%= l(:label_group) %> </strong>
        <p><%= text_field_tag('filter_users', '', :class => 'find-filter autocomplete') %></p>
        <div id="users-list" class="list-container">
            <%= render_principals_for_role(@role) %>
        </div>

        <p>
          <%= submit_tag(l(:label_add_item), :id => 'add_user_to_role', :class => 'btn-def', :disabled => 'disabled') %>
        </p>
      </fieldset>
    <% end %>
  </div>
</div>